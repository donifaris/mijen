<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="348dp"
                android:layout_height="171dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="33dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:srcCompat="@drawable/icon_tematik"
                android:onClick="tematik"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="348dp"
                android:layout_height="171dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="33dp"
                android:layout_marginTop="250dp"
                android:onClick="Pindah"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:srcCompat="@drawable/icon_wisata1" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="348dp"
                android:layout_height="171dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="31dp"
                android:layout_marginTop="350dp"
                android:onClick="edukasi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                app:srcCompat="@drawable/icon_wisata_edukasi" />

            <ImageView
                android:id="@+id/imageView6"
                app:srcCompat="@drawable/icon_kuliner"
                android:layout_width="348dp"
                android:layout_height="171dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="31dp"
                android:layout_marginTop="450dp"
                android:onClick="mainkuliner"
                />
        </RelativeLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="146dp"

        android:layout_marginStart="98dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="98dp"
        android:src="@drawable/hebat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</RelativeLayout>