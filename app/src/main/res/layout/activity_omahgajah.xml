<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradien_background"
    tools:context=".omahgajah">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_width="900dp"
                android:layout_height="240dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/omahgajah1"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="240dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:textColor="@android:color/white"
                android:background="#99141414"
                android:textAlignment="center"
                android:text="omah gajah adalah tempat refreshing untuk keluarga untuk keluar dari kepenatan dari lingkup perkotaan, memberikan nuansa alam dan alami menyatu dengan hawa pedesaan, tempat penginapan yang cocok untuk keluarga.\n
                lokasi omah gajah ada Kelurahan Karangmalang Kecamatan Mijen Kota Semarang, di jalan raya Smg - Ungaran.\n
penginapan fila dengan nuansa alam dan kembali ke tempo jaman dulu seperti warga di pedesaan" />

            <ImageView
                android:layout_width="3000dp"
                android:layout_height="240dp"
                android:layout_marginTop="415dp"
                android:background="@drawable/omahgajah2"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>