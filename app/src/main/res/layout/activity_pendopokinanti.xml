<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradien_background"
    tools:context=".pendopokinanti">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_width="900dp"
                android:layout_height="230dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/pendopo3"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="230dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:textColor="@android:color/white"
                android:background="#99141414"
                android:textAlignment="center"
                android:text="Pendopo kinanthi = pendopo serbaguna, yang dapat dipakai untuk bermacam-macam keperluan dan kegiatan seperti : pertemuan, rapat, acara ulang tahun, hingga penyelenggaraan resepsi dengan kapasitas undangan 500. Tempat ini berlokasi di desa wonolopo kec.mijen semarang.." />

            <ImageView
                android:layout_width="3000dp"
                android:layout_height="350dp"
                android:layout_marginTop="320dp"
                android:background="@drawable/pendopo1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />
            <ImageView
                android:layout_width="3000dp"
                android:layout_height="350dp"
                android:layout_marginTop="675dp"
                android:background="@drawable/pendopo2"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>