<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradien_background"
    tools:context=".paweningjati">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_width="900dp"
                android:layout_height="300dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/pawening1"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="230dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:textColor="@android:color/white"
                android:background="#99141414"
                android:textAlignment="center"
                android:text="Pawening Jati sangat cocok untuk tempat istirahat dan membuang kejenuhan kita setelah melakukan aktifitas sehari hari. Dengan nuansa yang menyatu dengan alam. Desain griya yang unik dan terkesan klasik era Feodal. ditambah lagi dengan hutan dan area persawahan yang mengelilinya Pawening Jati." />

            <ImageView
                android:layout_width="3000dp"
                android:layout_height="300dp"
                android:layout_marginTop="325dp"
                android:background="@drawable/pawening2"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />
            <ImageView
                android:layout_width="3000dp"
                android:layout_height="250dp"
                android:layout_marginTop="630dp"
                android:background="@drawable/pawening3"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>